<!DOCTYPE html>
<html lang="en">
 <head>
 <meta charset="utf-8">
 <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <% if session[:status] == "logged" %>
    <script>
      function preventBack() {
      window.history.forward();
    }
      window.onunload=preventBack();
    </script>
  <%end%>
  <title></title>
  </head>
  <body>
    <div class="form">
      <%= link_to "", "/user_profile/home_page", method: "post", class: "logout" %>
    <h1 class="fill">Add Notifications</h1>
      <%= form_tag("/notifications/create", :method=>"post") do %>
    <div class="field-wrap">
      <%= text_area_tag(:reminder, nil, placeholder: "Please type reminder", :required => true) %>
    </div>
    <div class="field-wrap">
    <div class="field_letter">
      Reminder Date<span class="req">*</span>
    </div>
    <div class="select_date_style">
      <%= select_date Date::today, :prefix => 'date_prefix' %>
    </div>
    </div>
      <%= submit_tag("SAVE", class: "reg-button") %>
      <% end %>
    <%
    if session[ :emsg ]=="filled" %>
      <script>
        window.alert("reminders added successfully!");
      </script> 
    <%
      session[ :emsg ]=nil
    end%>
  </body>
</html>
